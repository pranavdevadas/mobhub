    function validateOldPrice() {
        var oldPrice = document.getElementById("product_oldprice").value.trim();
        if (oldPrice.length === 0 || isNaN(oldPrice) || parseFloat(oldPrice) <= 0) {
            oldpriceError.innerHTML = "MRP is required and must be a positive number";
            oldpriceError.style.color = "red";
            return false;
        }
        oldpriceError.innerHTML = "Valid";
        oldpriceError.style.color = "green";
        return true;
    }

    function validateStock() {
        var stock = document.getElementById("product_stock").value.trim();
        if (stock.length === 0 || isNaN(stock) || parseInt(stock) < 0) {
            stockError.innerHTML = "Stock is required and must be a non-negative number";
            stockError.style.color = "red";
            return false;
        }
        stockError.innerHTML = "Valid";
        stockError.style.color = "green";
        return true;
    }

    function validateStorage() {
        var storage = document.getElementById("product_storage").value.trim();
        if (storage.length === 0 || isNaN(storage) || parseFloat(storage) <= 0) {
            storageError.innerHTML = "Storage is required and must be a positive number";
            storageError.style.color = "red";
            return false;
        }
        storageError.innerHTML = "Valid";
        storageError.style.color = "green";
        return true;
    }

    function validateForm() {
        if (
            !validateName() ||
            !validateDescription() ||
            !validatePrice() ||
            !validateOldPrice() ||
            !validateStock() ||
            !validateColor() ||
            !validateStorage()
        ) {
            submitError.style.display = "block";
            submitError.innerHTML = "Please enter all the fields correctly.";
            submitError.style.color = "red";
            setTimeout(function () {
                submitError.style.display = "none";
            }, 3000);
            return false;
        }
        return true;
    }
</script>
      

   

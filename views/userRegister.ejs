    <script>
        function validateForm() {
            // Name validation
            var nameInput = document.forms["registrationForm"]["name"];
            var nameError = document.getElementById("name-error");
            var nameRegex = /^[a-zA-Z ]+$/;
    
            if (!nameRegex.test(nameInput.value.trim())) {
                nameError.innerHTML = "Name should only contain letters and spaces";
                nameError.style.color = "red";
                return false;
            } else {
                nameError.innerHTML = "Valid";
                nameError.style.color = 'green';
            }

            var emailInput = document.forms["registrationForm"]["email"];
            var emailError = document.getElementById("email-error");
            var emailRegex = /^[a-zA-Z]{1}[a-zA-Z0-9._-]{3,}@[a-zA-Z0-9.-]+\.[a-zA-Z]{2,}$/;

            if (!emailRegex.test(emailInput.value.trim())) {
                emailError.innerHTML = "Enter a valid email address ";
                emailError.style.color = "red";
                return false;
            } else {
                emailError.innerHTML = "Valid";
                emailError.style.color = 'green';
            }
    
            // Phone validation
            var phoneInput = document.forms["registrationForm"]["phone"];
            var phoneError = document.getElementById("phone-error");
            var phoneRegex = /^[0-9]{10}$/;
            var consecutiveCount = 0;
            var lastDigit = null;
    
            for (var i = 0; i < phoneInput.value.length; i++) {
                if (phoneInput.value[i] === lastDigit) {
                    consecutiveCount++;
                    if (consecutiveCount > 6) {
                        phoneError.innerHTML = "Enter a valid 10-digit phone number";
                        phoneError.style.color = "red";
                        return false;
                    }
                } else {
                    consecutiveCount = 1;
                }
                lastDigit = phoneInput.value[i];
            }
    
            if (!phoneRegex.test(phoneInput.value.trim())) {
                phoneError.innerHTML = "Enter a valid 10-digit phone number";
                phoneError.style.color = "red";
                return false;
            } else {
                phoneError.innerHTML = "Valid";
                phoneError.style.color = 'green';
            }
    
            // Password validation
            var passwordInput = document.forms["registrationForm"]["password"];
            var passwordError = document.getElementById("password-error");
            var passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{6,12}$/;
    
            if (!passwordRegex.test(passwordInput.value)) {
                passwordError.innerHTML = "Password must be 6-12 characters with at least one uppercase, one lowercase, one digit, and one special character";
                passwordError.style.color = "red";
                return false;
            } else {
                passwordError.innerHTML = "Valid";
                passwordError.style.color = 'green';
            }
    
            return true;
        }
    </script>
    
    


        <script>
            function remove(productId) {
            Swal.fire({
                title: "Are you sure?",
                text: "You are about to remove this item from your cart.",
                icon: "question",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, remove it!",
                cancelButtonText: "Cancel",
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: `/remove-from-cart/${productId}`,
                        type: "DELETE",
                        success: function (data) {
                            if (data.success) {
                                Swal.fire({
                                    title: "Removed!",
                                    text: "The item has been successfully removed from your cart.",
                                    icon: "success",
                                    showConfirmButton: false,
                                    
                                });
                                setTimeout(() => {
                                    location.reload() 
                                    }, 2000);
                                $(".cart-item[data-id='" + productId + "']").remove();
                                $(".cart_total span").text("Rs " + data.totalPrice);
                            } else {
                                Swal.fire({
                                    title: "Error!",
                                    text: "Failed to remove the item. Please try again later.",
                                    icon: "error"
                                });
                            }
                        },
                        error: function () {
                            Swal.fire({
                                title: "Error!",
                                text: "An unexpected error occurred. Please try again later.",
                                icon: "error"
                            });
                        }
                    });
                }
            });
        }

        

            
        $(document).ready(function () {
            $(".qty-down, .qty-up").on("click", function (e) {
                e.preventDefault();
                var $button = $(this);
                var productId = $button.data("id");
                var action = $button.hasClass("qty-down") ? "decrement" : "increment";

                var currentQuantity = parseInt($(".qty-val[data-id='" + productId + "']").text());

                if (action === "increment" && currentQuantity === 4) {
                    Swal.fire({
                        title: "Maximum Quantity Reached",
                        icon: "warning"
                    });
                    return;
                }
                
                else if(action === 'decrement' && currentQuantity === 1){
                    return
                }

                $.ajax({
                    url: "/update-cart",
                    type: "POST",
                    data: { productId: productId, action: action },
                    success: function (data) {
                        console.log("Server response:", data);
                        if (data.success) {
                            var cartItem = data.cartItem;
                            var $quantitySpan = $(".qty-val[data-id='" + productId + "']");
                            var $cartPriceSpan = $(".cart__price[data-id='" + productId + "']");
                            var $totalPriceSpan = $(".cart_total span");

                            $quantitySpan.text(cartItem.quantity);

                            $cartPriceSpan.text("Rs " + (cartItem.price * cartItem.quantity));
                            $totalPriceSpan.text("Rs " + (data.totalprice));
                            

                        } else {
                            if (data.message === "Maximum quantity reached for this product") {
                                Swal.fire({
                                    title: "Maximum Quantity Reached",
                                    icon: "warning"
                                });
                            }
                        }
                    },
                    error: function () {
                        alert("Error in AJAX request.");
                    },
                });
            });
        });



